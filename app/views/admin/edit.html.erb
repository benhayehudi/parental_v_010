<div class="panel panel-default">

  <div class="panel-heading">

    <h3 class="panel-title">edit <%= current_parent.name.downcase %></h3>
  </div>

  <div class="panel-body">

    <%= form_for(current_parent) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <br>
      <%= f.submit 'submit', :class => 'btn btn-primary' %>
    <% end %>
    <%= link_to("delete user", admin_pth, method: :delete, class: 'btn btn-danger')

  </div>
