<div class="panel panel-default">

  <div class="panel-heading">

    <h3 class="panel-title">edit <%= current_parent.name.downcase %></h3>
  </div>

  <div class="panel-body">

    <%= form_for(admin_path(current_parent), url: admin_path(current_parent), controller: 'admin', action: 'patch') do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <br>
      <%= f.submit 'submit', :class => 'btn btn-primary' %>
    <% end %>
    <br>
    <%= link_to("delete user", admin_path, method: :delete, class: 'btn btn-danger') %>
    <br><br>
    <%= link_to 'return to all users', admin_index_path %>
    <br>
  </div>
